.items
  list-style-type none
  padding 0
  width: 25em
  & li
    cursor pointer
    background-color #EEE
    margin .5em 0
    padding .3em
    height 3.6em
    border-radius 4px
  & li:hover
    color #607D8B
    background-color #DDD
  & li.selected
    background-color rgb(143, 187, 130)
    color 'white'
  & li.selected:hover
    background-color rgb(118, 155, 106)

.todo-count
  font-size 0.8rem
